%h2= t(:sign_in, scope: %i[users sessions new])
= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  = f.input :name, autofocus: true
  = f.input :password, input_html: { autocomplete: 'current-password' }
  = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
  .d-grid.gap-2= f.button :submit, t(:sign_in, scope: %i[users sessions new]), class: 'btn-primary'
= link_to t(:forgot_your_password, scope: %i[users shared links])
