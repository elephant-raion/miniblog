-# rubocop:disable Sgcop/SimpleFormAssociation
-# rubocop:disable Layout/EmptyLineAfterMagicComment
-# frozen_string_literal: true
= simple_form_for(@singular_table_name) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
  - attributes.each do |attribute|
    - if  attribute.reference?
      = f.association attribute.name.to_sym
    - else
      = f.input attribute.name.to_sym

  .form-actions
    = f.button :submit
-# rubocop:enable Layout/EmptyLineAfterMagicComment
-# rubocop:enable Sgcop/SimpleFormAssociation
